scrape_configs:
  - job_name: node_linux
    scrape_interval: 5s
    static_configs:
    - targets: ['node-exporter:9100']

  - job_name: prometheus
    scrape_interval: 5s
    static_configs:
    - targets: ['prometheus:9090']

  - job_name: redis
    static_configs:
      - targets:
        - gitlab:9121

  - job_name: postgres
    static_configs:
      - targets:
        - gitlab:9187

  - job_name: node_gitlab
    static_configs:
      - targets:
        - gitlab:9100

  - job_name: gitlab-workhorse
    static_configs:
      - targets:
        - gitlab:9229

  - job_name: gitlab-rails
    metrics_path: "/-/metrics"
    scheme: http
    static_configs:
      - targets:
        - gitlab

  - job_name: gitlab-sidekiq
    static_configs:
      - targets:
        - gitlab:8082

  - job_name: gitlab_exporter_database
    metrics_path: "/database"
    static_configs:
      - targets:
        - gitlab:9168

  - job_name: gitlab_exporter_sidekiq
    metrics_path: "/sidekiq"
    static_configs:
      - targets:
        - gitlab:9168

  - job_name: registry
    static_configs:
      - targets:
        - gitlab:5001